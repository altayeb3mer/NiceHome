<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fcfcfc"
    >


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bar_lay"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:background="#440400"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="10dp"
            app:expandedTitleMarginEnd="20dp"
            android:background="@drawable/about_background"
            app:title="@string/menu_about_us">

            <androidx.appcompat.widget.Toolbar
                app:title="@string/menu_about_us"
                android:id="@+id/about_us_toolbar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >




        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context=".Login"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="2dp">

            <!-- android:focusable="true"
        android:focusableInTouchMode="true"-->

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                    ////////
                   <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="15sp"
                        android:text="@string/about_us_welcome_to"
                        android:textColor="@color/secondary_text"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="@string/about_us_nice_home"
                        android:textColor="@color/colorPrimary"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="15sp"
                        android:text="@string/about_us_3"
                        android:textColor="@color/secondary_text"
                        />

                        <TextView
                        android:id="@+id/texView5"
                        android:text="@string/mark_nice_home"
                        android:textSize="15sp"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/primary_text"
                        android:padding="2dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="17sp"
                        android:text="@string/about_us_low_cost"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:drawableStart="@drawable/ic_low_cost"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_low_cost" />
                    <TextView
                        android:id="@+id/texView10"
                        android:text=""
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/secondary_text"
                        android:gravity="start"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="17sp"
                        android:text="@string/about_us_good_marketing"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:drawableStart="@drawable/ic_good_marketing"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_good_marketing" />
                    <TextView
                        android:id="@+id/texView1"
                        android:text=""
                        android:textSize="15sp"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/secondary_text"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="17sp"
                        android:text="@string/about_us_easy_to_find"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:drawableStart="@drawable/ic_easy_to_find"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_easy_to_find" />
                    <TextView
                        android:id="@+id/texView2"
                        android:text=""
                        android:textSize="15sp"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/secondary_text"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="17sp"
                        android:text="@string/about_us_reliable"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:drawableStart="@drawable/ic_reliable"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_reliable" />
                    <TextView
                        android:id="@+id/texView0"
                        android:text=""
                        android:textSize="15sp"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/secondary_text"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="@string/about_us_our_services"
                        android:textColor="@color/colorPrimary"
                        />
                    <TextView
                        android:id="@+id/texView"
                        android:text="@string/about_us_our_serv_sub"
                        android:textSize="15sp"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/primary_text"
                        android:padding="2dp"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:paddingBottom="5dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:gravity="center"
                            android:paddingBottom="5dp">
                            <ImageView
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:src="@drawable/buy"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary_text"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:text="@string/about_buy_property"
                                android:padding="2dp"/>
                            <TextView
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary_text"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:text="@string/about_us_buy_sub"/>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:paddingBottom="5dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:gravity="center"
                            android:paddingBottom="5dp">
                            <ImageView
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:src="@drawable/sale"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary_text"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:text="@string/about_us_sale_property"
                                android:padding="2dp"/>
                            <TextView
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary_text"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:text="@string/about_us_sale_sub"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:paddingBottom="5dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:gravity="center"
                            android:paddingBottom="5dp">
                            <ImageView
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:src="@drawable/rent"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary_text"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:text="@string/about_us_rent_property"
                                android:padding="2dp"
                                />
                            <TextView
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary_text"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:text="@string/about_us_rent_property_sub"/>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/about_us_linerlayout">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textSize="17sp"
                        android:text="@string/powered_by"
                        android:textColor="@color/primary_text"
                        />
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="@string/isn_technology"
                        android:textColor="@color/colorPrimary"
                        />
                    <TextView
                        android:id="@+id/isn_website"
                        android:text="@string/isn_technology_com"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:padding="10dp"/>
                    </LinearLayout>
                    ///////
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
