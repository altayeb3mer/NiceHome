<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/custom_list_img_id"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                />
            <TextView
                android:id="@+id/custom_list_pro_type"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:background="@color/orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pro_details_description"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            </RelativeLayout>
            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/custom_list_main_title_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khartoum"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2.48">

                    <TextView
                        android:padding="10dp"
                        android:id="@+id/custom_list_price_id"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="230,000"
                        android:textColor="@color/orange"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_alignTop="@+id/custom_list_sub_location_id"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="right" />

                    <TextView
                        android:id="@+id/custom_list_main_loc_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khartoum"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:drawableStart="@drawable/ic_location"
                        android:drawableLeft="@drawable/ic_location"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:id="@+id/custom_list_sub_location_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="450,Africa St."
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/custom_list_main_loc_id"
                        android:layout_toEndOf="@+id/custom_list_main_loc_id" />

                </RelativeLayout>


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    />

                <LinearLayout
                    android:layout_weight="4"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:id="@+id/custom_list_area_id"
                        android:padding="5dp"
                        android:text="550متر"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:drawableStart="@drawable/ic_area"
                        android:drawableLeft="@drawable/ic_area" />

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/custom_list_bedroom_id"
                            android:padding="3dp"
                            android:drawablePadding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:drawableStart="@drawable/ic_bedrooms"
                            android:drawableLeft="@drawable/ic_bedrooms"
                            android:gravity="center"/>


                        <TextView
                            android:layout_weight="1"
                            android:drawablePadding="5dp"
                            android:id="@+id/custom_list_bathroom_id"
                            android:padding="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:drawableStart="@drawable/ic_bathrooms"
                            android:drawableLeft="@drawable/ic_bathrooms"
                            android:gravity="center"/>






                        <TextView
                            android:layout_weight="1"
                            android:drawablePadding="5dp"
                            android:id="@+id/custom_list_garage_id"
                            android:padding="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:drawableStart="@drawable/ic_garages"
                            android:drawableLeft="@drawable/ic_garages"
                            android:gravity="center"/>





                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>